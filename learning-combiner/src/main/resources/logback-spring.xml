<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <!-- 可以读取配置文件-->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>
    <property name="LOG_HOME" value="logs"/>
    <property name="PATTERN" value="[%-5p] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%logger{50}] [%L] [%X{tracerId}] %m%n"/>

    <!-- 正常日志输出 -->
    <appender name="info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 正在记录的日志文档的路径及文档名 -->
        <file>${LOG_HOME}/${APP_NAME}-info.log</file>
        <!--日志文档输出格式-->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 此日志文档只记录某个级别的 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>info</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <!-- 日志记录器的滚动策略，按日期，按大小记录 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/history/info/${APP_NAME}-info-%d{yyyy-MM-dd}-%i.log.</fileNamePattern>
            <!-- 最大保留10天的日志 -->
            <maxHistory>10</maxHistory>
            <!-- 日志文件的最大大小 -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 总日志文件大小不超过1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <!-- 错误日志输出 -->
    <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 正在记录的日志文档的路径及文档名 -->
        <file>${LOG_HOME}/${APP_NAME}-error.log</file>
        <!--日志文档输出格式-->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 此日志文档只记录某个级别的 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>error</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <!-- 日志记录器的滚动策略，按日期，按大小记录 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/history/error/${APP_NAME}-error-%d{yyyy-MM-dd}-%i.log.</fileNamePattern>
            <!-- 最大保留10天的日志 -->
            <maxHistory>10</maxHistory>
            <!-- 日志文件的最大大小 -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 总日志文件大小不超过1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 输出到控制台  -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <springProfile name="dev">
        <!-- 大于等于info级别的才会输出 -->
        <root level="info">
            <appender-ref ref="info"/>
            <appender-ref ref="error"/>
            <appender-ref ref="CONSOLE"/>
        </root>
        <!-- 开发环境, 指定某包日志为debug级 -->
        <logger name="com.guan.learning" level="debug"/>
        <logger name="org.springframework" level="debug"/>
    </springProfile>

    <springProfile name="prd">
        <!-- 大于等于info级别的才会输出 -->
        <root level="info">
            <appender-ref ref="info"/>
            <appender-ref ref="error"/>
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.guan.learning" level="info"/> <!-- 生产环境, 指定某包日志为warn级 -->
    </springProfile>
</configuration>